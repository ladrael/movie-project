	<!-- 영화관 - 영화리스트 -->
	<select id="selectmoviesList" resultType="hashmap">
	<!-- 각 영화관에 상영하는 영화리스트 출력 -->
		select distinct m.info_movie_title
			from cinema c
				join schedule s 
					on c.cinema_code = s.sch_cinema_code 
						join movieinfo m 
							on m.info_movie_code = s.sch_movie_code 
								where c.cinema_name = #{cd};

	</select>
