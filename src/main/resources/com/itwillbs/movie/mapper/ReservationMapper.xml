	<!-- 영화상세정보, 영화관, 상영관, 영화일정, (좌석) -->
	<!-- 안쓰는 컬럼 정리하기, 좌석 정보 추가 후 JOIN 추가 -->
	<select id="selectMovie" resultType="hashmap">
		SELECT *
			FROM schedule sd 
				JOIN cinema c
					ON sd.sch_cinema_code = c.cinema_code
						JOIN screen sc 
							ON sd.sch_screen_code = sc.screen_code
								JOIN movieinfo m 
									ON m.info_movie_code = sd.sch_movie_code ;
	</select>
